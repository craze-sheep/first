* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  color: #333;
  font-size: 28rpx;
  line-height: 1.6;
}

.container {
  padding: 20rpx;
}

.text-center {
  text-align: center;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mb-40 {
  margin-bottom: 40rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.btn {
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  transition: all 0.3s;
  border: none;
  cursor: pointer;
}

.btn-primary {
  background-color: #0066cc;
  color: white;
}

.btn-primary:active {
  background-color: #0052a3;
  opacity: 0.8;
}

.btn-danger {
  background-color: #f5222d;
  color: white;
}

.btn-success {
  background-color: #52c41a;
  color: white;
}

.btn-warning {
  background-color: #faad14;
  color: white;
}

.card {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 8rpx;
}

.tag-success {
  background-color: #e6f7ed;
  color: #52c41a;
}

.tag-danger {
  background-color: #fff1f0;
  color: #f5222d;
}

.tag-warning {
  background-color: #fffbe6;
  color: #faad14;
}

.tag-info {
  background-color: #e6f7ff;
  color: #1890ff;
}
