.login-page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx 20rpx;
  color: white;
}

.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
  margin-top: 40rpx;
}

.logo {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.app-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.app-desc {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
}

.roles-title {
  display: block;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  text-align: center;
  font-weight: bold;
}

.role-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.role-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s;
}

.role-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

.role-icon {
  font-size: 48rpx;
}

.role-btn text {
  font-size: 24rpx;
}

.login-form {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 30rpx;
  color: #2c3e50;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-group label {
  display: block;
  font-size: 24rpx;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.form-group input {
  width: 100%;
  padding: 12rpx 16rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 24rpx;
  box-sizing: border-box;
}

.login-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 14rpx 0;
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.help-links {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #eee;
}

.link {
  font-size: 22rpx;
  color: #667eea;
}
