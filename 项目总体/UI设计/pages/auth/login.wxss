.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #0066cc 0%, #0052a3 100%);
  padding: 40rpx 30rpx;
}

.login-header {
  text-align: center;
  margin-bottom: 60rpx;
  color: white;
}

.logo {
  font-size: 120rpx;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.8;
}

.form {
  width: 100%;
  max-width: 400rpx;
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.form-input {
  width: 100%;
  padding: 16rpx 16rpx;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: white;
  color: #333;
}

.btn-login {
  width: 100%;
  padding: 18rpx;
  margin-top: 20rpx;
  background-color: #0066cc;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin-bottom: 0;
}

.btn-login:active {
  background-color: #0052a3;
}

.footer {
  margin-top: 40rpx;
  text-align: center;
}

.footer-text {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}
