<view class="login-container">
  <view class="login-header">
    <view class="logo">考</view>
    <view class="title">智能考勤系统</view>
    <view class="subtitle">高效·安全·智能</view>
  </view>
  
  <view class="form">
    <view class="form-group">
      <label class="form-label">用户身份</label>
      <picker class="form-input" bindchange="handleInput" data-field="userRole" value="{{userRole}}" range="{{roles}}" range-key="label">
        <view>{{userRole === 'student' ? '学生' : userRole === 'teacher' ? '教师' : userRole === 'counselor' ? '辅导员' : '管理员'}}</view>
      </picker>
    </view>
    
    <view class="form-group">
      <label class="form-label">学号/工号</label>
      <input class="form-input" placeholder="请输入学号或工号" bindchange="handleInput" data-field="studentId" value="{{studentId}}" />
    </view>
    
    <view class="form-group">
      <label class="form-label">密码</label>
      <input class="form-input" placeholder="请输入密码" password bindchange="handleInput" data-field="password" value="{{password}}" />
    </view>
    
    <button class="btn-login" bindtap="handleLogin" loading="{{loading}}" disabled="{{loading}}">
      登录
    </button>
  </view>
  
  <view class="footer">
    <text class="footer-text">首次登录？联系管理员获取账号</text>
  </view>
</view>
