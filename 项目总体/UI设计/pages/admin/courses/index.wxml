<view class="courses-page">
  <view class="header">
    <text class="title">课程管理</text>
    <button class="btn-add" bindtap="addCourse">+ 新增课程</button>
  </view>

  <view class="search-section">
    <input class="search-input" type="text" placeholder="搜索课程名或教师" model:value="{{searchText}}" bindchange="search" />
    <view class="filter-tabs">
      <view class="tab" data-status="all" bindtap="filterByStatus">全部</view>
      <view class="tab active" data-status="active" bindtap="filterByStatus">开课中</view>
      <view class="tab" data-status="ended" bindtap="filterByStatus">已结束</view>
    </view>
  </view>

  <view class="courses-table">
    <view class="table-header">
      <view class="col-course">课程名</view>
      <view class="col-teacher">教师</view>
      <view class="col-students">学生数</view>
      <view class="col-status">状态</view>
      <view class="col-action">操作</view>
    </view>
    
    <view class="table-body">
      <view class="table-row" wx:for="{{courses}}" wx:key="id">
        <view class="col-course">{{item.name}}</view>
        <view class="col-teacher">{{item.teacher}}</view>
        <view class="col-students">{{item.studentCount}}</view>
        <view class="col-status">
          <text class="status-badge" data-status="{{item.status}}">{{item.statusText}}</text>
        </view>
        <view class="col-action">
          <button class="btn-edit" bindtap="editCourse" data-id="{{item.id}}">编辑</button>
          <button class="btn-delete" bindtap="deleteCourse" data-id="{{item.id}}">删除</button>
        </view>
      </view>
    </view>
  </view>
</view>
