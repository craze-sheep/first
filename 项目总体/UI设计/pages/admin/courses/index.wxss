.courses-page {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
}

.title {
  font-size: 28rpx;
  font-weight: bold;
}

.btn-add {
  background: #51cf66;
  color: white;
  border: none;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
}

.search-section {
  padding: 20rpx;
}

.search-input {
  width: 100%;
  background: white;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  font-size: 24rpx;
  margin-bottom: 12rpx;
  box-sizing: border-box;
}

.filter-tabs {
  display: flex;
  gap: 12rpx;
}

.tab {
  background: white;
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  color: #666;
  flex: 1;
  text-align: center;
}

.tab.active {
  background: #667eea;
  color: white;
  border-color: #667eea;
}

.courses-table {
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.table-header {
  display: grid;
  grid-template-columns: 2fr 1.5fr 1fr 1fr 1.5fr;
  gap: 12rpx;
  background: #f9fafb;
  padding: 16rpx;
  border-bottom: 1rpx solid #e0e0e0;
  font-weight: bold;
  font-size: 22rpx;
  color: #2c3e50;
}

.table-body {
  display: flex;
  flex-direction: column;
}

.table-row {
  display: grid;
  grid-template-columns: 2fr 1.5fr 1fr 1fr 1.5fr;
  gap: 12rpx;
  padding: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
  align-items: center;
  font-size: 22rpx;
}

.table-row:last-child {
  border-bottom: none;
}

.col-course {
  font-weight: 500;
  color: #2c3e50;
}

.col-teacher {
  color: #666;
}

.col-students {
  text-align: center;
  color: #666;
}

.col-status {
  text-align: center;
}

.col-action {
  display: flex;
  gap: 8rpx;
  justify-content: flex-end;
}

.status-badge {
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.status-badge[data-status="active"] {
  background: #e8f5e9;
  color: #2e7d32;
}

.status-badge[data-status="ended"] {
  background: #f5f5f5;
  color: #999;
}

.btn-edit,
.btn-delete {
  padding: 6rpx 12rpx;
  border: none;
  border-radius: 4rpx;
  font-size: 18rpx;
  color: white;
}

.btn-edit {
  background: #667eea;
}

.btn-delete {
  background: #ff6b6b;
}
