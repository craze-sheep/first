<view class="admin-container">
  <!-- 顶部欢迎区 -->
  <view class="header-section">
    <view class="header-content">
      <text class="header-title">管理中心</text>
      <text class="header-subtitle">欢迎，系统管理员</text>
    </view>
    <view class="header-icon">⚙️</view>
  </view>

  <!-- 关键数据卡片 -->
  <view class="stats-grid">
    <view class="stat-card">
      <view class="stat-value">2,485</view>
      <text class="stat-label">注册用户</text>
    </view>
    <view class="stat-card">
      <view class="stat-value">124</view>
      <text class="stat-label">开设课程</text>
    </view>
    <view class="stat-card">
      <view class="stat-value">98.2%</view>
      <text class="stat-label">平均出勤率</text>
    </view>
    <view class="stat-card">
      <view class="stat-value">3,847</view>
      <text class="stat-label">今日签到</text>
    </view>
  </view>

  <!-- 快捷操作 -->
  <view class="quick-actions">
    <text class="section-title">快速操作</text>
    <view class="action-grid">
      <view class="action-item" bindtap="navigateTo" data-url="pages/admin/user-management/index">
        <view class="action-icon">👥</view>
        <text class="action-text">用户管理</text>
      </view>
      <view class="action-item" bindtap="navigateTo" data-url="pages/admin/course-management/index">
        <view class="action-icon">📚</view>
        <text class="action-text">课程管理</text>
      </view>
      <view class="action-item" bindtap="navigateTo" data-url="pages/admin/statistics/index">
        <view class="action-icon">📊</view>
        <text class="action-text">数据统计</text>
      </view>
      <view class="action-item" bindtap="navigateTo" data-url="pages/admin/system-config/index">
        <view class="action-icon">⚙️</view>
        <text class="action-text">系统配置</text>
      </view>
      <view class="action-item" bindtap="navigateTo" data-url="pages/admin/monitoring/index">
        <view class="action-icon">📡</view>
        <text class="action-text">系统监控</text>
      </view>
      <view class="action-item" bindtap="navigateTo" data-url="pages/admin/logs/index">
        <view class="action-icon">📋</view>
        <text class="action-text">日志管理</text>
      </view>
    </view>
  </view>

  <!-- 最近操作 -->
  <view class="recent-activity">
    <text class="section-title">最近操作</text>
    <view class="activity-list">
      <view class="activity-item">
        <view class="activity-icon">✓</view>
        <view class="activity-info">
          <text class="activity-title">李老师 添加了课程</text>
          <text class="activity-time">2分钟前</text>
        </view>
      </view>
      <view class="activity-item">
        <view class="activity-icon">✓</view>
        <view class="activity-info">
          <text class="activity-title">批量导入学生 100人</text>
          <text class="activity-time">15分钟前</text>
        </view>
      </view>
      <view class="activity-item">
        <view class="activity-icon">⚠️</view>
        <view class="activity-info">
          <text class="activity-title">系统配置已更新</text>
          <text class="activity-time">1小时前</text>
        </view>
      </view>
    </view>
  </view>
</view>
