.counselor-home {
  background: linear-gradient(135deg, #f5f7fa 0%, #f9fafb 100%);
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx 20rpx 40rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.welcome-text {
  font-size: 32rpx;
  font-weight: bold;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.stats-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;
  padding: 20rpx;
  margin-top: -30rpx;
}

.stat-card {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  transition: transform 0.3s, box-shadow 0.3s;
}

.stat-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

.stat-card.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
}

.stat-value.warning {
  color: #ff6b6b;
}

.quick-actions {
  padding: 20rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #2c3e50;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
  background: white;
  border-radius: 12rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx;
  cursor: pointer;
  transition: transform 0.2s;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

.action-icon.bg-blue {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.action-icon.bg-red {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.action-icon.bg-green {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.action-icon.bg-orange {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.action-label {
  font-size: 22rpx;
  color: #2c3e50;
  text-align: center;
}

.today-section {
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.more-link {
  font-size: 22rpx;
  color: #667eea;
  text-decoration: none;
}

.todo-list {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.todo-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.todo-item:last-child {
  border-bottom: none;
}

.priority-indicator {
  width: 4rpx;
  height: 40rpx;
  background: #667eea;
  border-radius: 2rpx;
}

.todo-item.high-priority .priority-indicator {
  background: #ff6b6b;
}

.todo-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.todo-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #2c3e50;
}

.todo-time {
  font-size: 20rpx;
  color: #95a5a6;
}

.todo-badge {
  background: #ff6b6b;
  color: white;
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.todo-status {
  background: #ecf0f1;
  color: #7f8c8d;
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
}
