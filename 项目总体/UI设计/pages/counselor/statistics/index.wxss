.statistics-page {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

.selector-group {
  display: flex;
  gap: 12rpx;
}

.time-picker,
.grade-picker {
  flex: 1;
}

.picker-value {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  text-align: center;
}

.overall-stats {
  padding: 20rpx;
}

.stat-card {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.stat-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #95a5a6;
}

.stat-value-group {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
}

.stat-change {
  font-size: 20rpx;
  color: #51cf66;
}

.stat-change.up {
  color: #51cf66;
}

.stat-change.down {
  color: #ff6b6b;
}

.progress-bar {
  background: #ecf0f1;
  border-radius: 8rpx;
  height: 8rpx;
  overflow: hidden;
}

.progress {
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  height: 100%;
}

.attendance-summary {
  background: white;
  border-radius: 12rpx;
  padding: 16rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.summary-item {
  text-align: center;
  padding: 12rpx;
  border-radius: 8rpx;
  background: #f9fafb;
}

.summary-label {
  display: block;
  font-size: 20rpx;
  color: #95a5a6;
  margin-bottom: 8rpx;
}

.summary-value {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 4rpx;
}

.summary-value.alert {
  color: #ff6b6b;
}

.summary-percentage {
  display: block;
  font-size: 18rpx;
  color: #7f8c8d;
}

.analysis-section {
  padding: 20rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #2c3e50;
}

.ranking-list {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.ranking-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.ranking-item:last-child {
  border-bottom: none;
}

.rank-badge {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #ecf0f1;
  color: #2c3e50;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  min-width: 40rpx;
}

.ranking-item.rank-1 .rank-badge {
  background: #ffd700;
  color: white;
}

.ranking-item.rank-2 .rank-badge {
  background: #c0c0c0;
  color: white;
}

.ranking-item.rank-3 .rank-badge {
  background: #cd7f32;
  color: white;
}

.class-name {
  width: 100rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #2c3e50;
}

.rate-bar {
  flex: 1;
  background: #ecf0f1;
  border-radius: 6rpx;
  height: 6rpx;
  overflow: hidden;
  margin: 0 12rpx;
}

.rate-fill {
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  height: 100%;
}

.rate-value {
  width: 50rpx;
  text-align: right;
  font-weight: bold;
  color: #667eea;
  font-size: 24rpx;
}

.export-section {
  padding: 20rpx;
}

.export-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 14rpx 0;
  font-size: 28rpx;
  font-weight: bold;
}
