.role-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #f5f7fa;
  padding: 0;
}

.role-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-info {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.9;
}

.current-role {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.role-label {
  font-size: 26rpx;
  opacity: 0.9;
}

.role-badge {
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.role-content {
  flex: 1;
  padding: 30rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

.role-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.role-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 25rpx;
  border: 2rpx solid #ddd;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.role-card.active {
  border-color: #667eea;
  background: #f9f9ff;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.15);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.role-icon {
  font-size: 40rpx;
}

.role-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.role-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.role-meta {
  display: flex;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.meta-badge {
  background: #e8eaf6;
  color: #667eea;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.btn-switch {
  width: 100%;
  height: 70rpx;
  background: #f0f2f5;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.btn-switch.active {
  background: #667eea;
  color: #fff;
  border-color: #667eea;
  cursor: not-allowed;
}

.btn-switch:not(.active):not(.disabled):active {
  background: #e8eaf6;
  border-color: #667eea;
  color: #667eea;
}

.btn-switch.disabled {
  opacity: 0.6;
  cursor: not-allowed;
}
