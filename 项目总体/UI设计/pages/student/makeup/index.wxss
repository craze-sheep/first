.makeup-page {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx 20rpx;
  color: white;
}

.title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin: 20rpx 20rpx 16rpx;
  color: #2c3e50;
}

.absent-courses {
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.course-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  position: relative;
}

.course-header {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.course-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #2c3e50;
}

.course-date {
  font-size: 20rpx;
  color: #95a5a6;
  background: #f0f0f0;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.course-details {
  display: flex;
  gap: 12rpx;
  font-size: 20rpx;
  color: #95a5a6;
  flex: 1;
}

.teacher {
  flex: 1;
}

.status {
  background: #ffebee;
  color: #c62828;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.checkbox {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  background: white;
}

.course-item[data-selected="true"] .checkbox {
  background: #667eea;
  border-color: #667eea;
}

.form-section {
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.form-group {
  margin-bottom: 20rpx;
}

.form-group label {
  display: block;
  font-size: 24rpx;
  margin-bottom: 8rpx;
  color: #2c3e50;
  font-weight: 500;
}

.required {
  color: #ff6b6b;
}

.picker-input {
  background: #f9fafb;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  font-size: 24rpx;
  color: #2c3e50;
}

.textarea {
  width: 100%;
  min-height: 100rpx;
  background: #f9fafb;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  font-size: 24rpx;
  font-family: inherit;
  box-sizing: border-box;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 20rpx;
  color: #95a5a6;
  margin-top: 4rpx;
}

.upload-area {
  background: #f9fafb;
  border: 2rpx dashed #e0e0e0;
  border-radius: 8rpx;
  padding: 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  cursor: pointer;
}

.upload-icon {
  font-size: 48rpx;
}

.upload-text {
  display: block;
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 500;
}

.upload-hint {
  display: block;
  font-size: 20rpx;
  color: #95a5a6;
}

.uploaded-files {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.file-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #f9fafb;
  padding: 12rpx;
  border-radius: 8rpx;
}

.file-icon {
  font-size: 20rpx;
}

.file-name {
  flex: 1;
  font-size: 22rpx;
  color: #2c3e50;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.delete-btn {
  color: #ff6b6b;
  font-size: 24rpx;
  cursor: pointer;
}

.actions {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.btn-submit {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 14rpx 0;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-cancel {
  background: #ecf0f1;
  color: #7f8c8d;
  border: none;
  border-radius: 8rpx;
  padding: 14rpx 0;
  font-size: 28rpx;
}
