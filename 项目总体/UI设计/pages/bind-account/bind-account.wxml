<view class="bind-container">
  <view class="bind-header">
    <text class="header-title">账号绑定</text>
    <text class="header-subtitle">完成身份验证，开启考勤之旅</text>
  </view>

  <view class="bind-content">
    <!-- 步骤指示 -->
    <view class="step-indicator">
      <view class="step active">
        <text class="step-number">1</text>
        <text class="step-label">基本信息</text>
      </view>
      <view class="step-line"></view>
      <view class="step">
        <text class="step-number">2</text>
        <text class="step-label">身份验证</text>
      </view>
      <view class="step-line"></view>
      <view class="step">
        <text class="step-number">3</text>
        <text class="step-label">完成绑定</text>
      </view>
    </view>

    <!-- 表单区 -->
    <view class="form-section">
      <view class="form-group">
        <label class="form-label">真实姓名<text class="required">*</text></label>
        <input class="form-input" placeholder="请输入您的真实姓名" />
      </view>

      <view class="form-group">
        <label class="form-label">学号/工号<text class="required">*</text></label>
        <input class="form-input" placeholder="例如：2023001001" />
      </view>

      <view class="form-group">
        <label class="form-label">身份类型<text class="required">*</text></label>
        <picker class="form-picker" range="{{identityTypes}}">
          <view class="form-input">选择身份</view>
        </picker>
      </view>

      <view class="form-group">
        <label class="form-label">验证方式</label>
        <view class="verify-options">
          <button class="verify-btn">
            <text>📷 扫描证件</text>
          </button>
          <button class="verify-btn">
            <text>🔍 系统查询</text>
          </button>
        </view>
      </view>
    </view>

    <!-- 按钮区 -->
    <view class="action-buttons">
      <button class="btn-cancel">取消</button>
      <button class="btn-submit">下一步</button>
    </view>
  </view>
</view>
