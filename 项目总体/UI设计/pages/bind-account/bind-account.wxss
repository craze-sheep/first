.bind-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #f5f7fa;
  padding: 0;
}

.bind-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 40rpx;
  text-align: center;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.bind-content {
  flex: 1;
  padding: 40rpx;
}

.step-indicator {
  display: flex;
  align-items: center;
  margin-bottom: 50rpx;
  justify-content: space-between;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  background: #e8eaf6;
  color: #667eea;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 28rpx;
}

.step.active .step-number {
  background: #667eea;
  color: #fff;
}

.step-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  text-align: center;
}

.step.active .step-label {
  color: #667eea;
  font-weight: bold;
}

.step-line {
  width: 40rpx;
  height: 2rpx;
  background: #e8eaf6;
  margin: 0 10rpx;
}

.form-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.required {
  color: #ff6b6b;
}

.form-input,
.form-picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 15rpx;
  font-size: 28rpx;
  background: #f9f9f9;
  box-sizing: border-box;
}

.verify-options {
  display: flex;
  gap: 15rpx;
}

.verify-btn {
  flex: 1;
  height: 70rpx;
  background: #f0f2f5;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.verify-btn:active {
  background: #e8eaf6;
  border-color: #667eea;
  color: #667eea;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-cancel,
.btn-submit {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.btn-cancel {
  background: #f0f2f5;
  color: #333;
}

.btn-submit {
  background: #667eea;
  color: #fff;
}
