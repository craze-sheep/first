.message-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f7fa;
  padding: 0;
}

.message-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
}

.header-actions {
  display: flex;
  gap: 10rpx;
}

.header-btn {
  width: 50rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.filter-tags {
  background: #fff;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #e8eaf6;
  position: sticky;
  top: 0;
  z-index: 9;
}

.tags-scroll {
  display: flex;
  overflow-x: auto;
  padding: 0 20rpx;
  white-space: nowrap;
}

.tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  margin-right: 10rpx;
  background: #f0f2f5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
}

.tag.active {
  background: #667eea;
  color: #fff;
}

.message-list {
  flex: 1;
  overflow-y: auto;
}

.message-group {
  padding: 20rpx 0;
}

.group-title {
  display: block;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  color: #999;
  font-weight: bold;
  background: #f5f7fa;
}

.message-item {
  display: flex;
  align-items: flex-start;
  gap: 15rpx;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f2f5;
  transition: all 0.2s ease;
  position: relative;
}

.message-item:active {
  background: #f9f9f9;
}

.message-item.unread {
  background: #f9f9ff;
}

.message-icon {
  font-size: 40rpx;
  flex-shrink: 0;
  width: 50rpx;
  text-align: center;
}

.message-content {
  flex: 1;
  min-width: 0;
}

.message-header-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.message-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.message-time {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
}

.message-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.message-item.read .message-title {
  color: #999;
}

.unread-dot {
  width: 12rpx;
  height: 12rpx;
  background: #667eea;
  border-radius: 50%;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}
