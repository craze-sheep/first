.checkin-container {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  padding-bottom: 30rpx;
}

.header-section {
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.header-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
}

.config-section {
  background: white;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.config-item {
  margin-bottom: 28rpx;
}

.config-label {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.picker-value {
  padding: 14rpx 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #333;
}

.strategy-options {
  display: flex;
  gap: 12rpx;
}

.strategy-card {
  flex: 1;
  padding: 16rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
}

.strategy-card.active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
}

.strategy-name {
  display: block;
  font-size: 22rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.strategy-desc {
  display: block;
  font-size: 18rpx;
  color: #999;
}

.input-group {
  display: flex;
}

.input-field {
  flex: 1;
  padding: 14rpx 16rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.btn-primary {
  width: 100%;
  padding: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
}
