.teacher-container {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  padding-bottom: 30rpx;
}

.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.header-content {
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

.header-icon {
  font-size: 48rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  padding: 30rpx;
  margin: -40rpx 30rpx 0;
}

.stat-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 22rpx;
  color: #999;
}

.search-section {
  padding: 20rpx 30rpx;
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
}

.search-bar {
  position: relative;
  margin-bottom: 16rpx;
}

.search-input {
  width: 100%;
  padding: 14rpx 16rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.search-icon {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
}

.filter-tabs {
  display: flex;
  gap: 12rpx;
}

.filter-tab {
  flex: 1;
  padding: 12rpx 16rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  font-size: 22rpx;
  color: #666;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
}

.course-list {
  padding: 0 30rpx;
}

.course-card {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.course-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.course-class {
  display: block;
  font-size: 22rpx;
  color: #999;
}

.course-attendance {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
}

.course-body {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
  padding: 12rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.course-time,
.course-location {
  display: block;
  font-size: 20rpx;
  color: #666;
}

.course-actions {
  display: flex;
  gap: 12rpx;
}

.btn-action {
  flex: 1;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.btn-action.btn-secondary {
  background: #f0f0f0;
  color: #333;
}
