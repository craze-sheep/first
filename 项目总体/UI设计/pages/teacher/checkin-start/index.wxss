.checkin-start-page {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.header {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 30rpx 20rpx;
  color: white;
}

.title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin: 20rpx 20rpx 16rpx;
  color: #2c3e50;
}

.course-selector {
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.course-picker {
  display: block;
}

.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f9fafb;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  font-size: 24rpx;
  color: #2c3e50;
}

.picker-icon {
  color: #95a5a6;
}

.strategy-section {
  padding: 0 20rpx;
}

.strategy-cards {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.strategy-card {
  background: white;
  border-radius: 12rpx;
  padding: 16rpx;
  text-align: center;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.strategy-card.active {
  border-color: #4facfe;
  background: #f0f7ff;
}

.strategy-icon {
  display: block;
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.strategy-name {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 4rpx;
}

.strategy-desc {
  display: block;
  font-size: 20rpx;
  color: #95a5a6;
  margin-bottom: 8rpx;
}

.strategy-time {
  display: block;
  font-size: 18rpx;
  color: #bdc3c7;
}

.params-section {
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.param-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.param-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.param-item label {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 500;
}

.param-item input {
  background: #f9fafb;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  font-size: 24rpx;
  color: #2c3e50;
}

.preview-section {
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.preview-card {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.preview-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx;
  background: #f9fafb;
  border-radius: 8rpx;
}

.preview-item .label {
  font-size: 22rpx;
  color: #95a5a6;
}

.preview-item .value {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 500;
}

.actions {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.btn-start {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 14rpx 0;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-cancel {
  background: #ecf0f1;
  color: #7f8c8d;
  border: none;
  border-radius: 8rpx;
  padding: 14rpx 0;
  font-size: 28rpx;
}
