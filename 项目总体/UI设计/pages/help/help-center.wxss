.help-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f7fa;
  padding: 0;
}

.help-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 20rpx 30rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.search-box {
  width: 100%;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  padding: 0 15rpx;
  font-size: 28rpx;
  color: #fff;
}

.help-content {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 30rpx;
}

.quick-nav {
  background: #fff;
  margin: 15rpx;
  padding: 25rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.nav-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap: 15rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.nav-item:active {
  background: #e8eaf6;
}

.nav-icon {
  font-size: 36rpx;
}

.nav-label {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  word-break: break-all;
}

.faq-section,
.guide-section,
.contact-section {
  background: #fff;
  margin: 15rpx;
  padding: 25rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #e8eaf6;
}

.faq-item {
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f2f5;
  padding-bottom: 15rpx;
}

.faq-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
  margin-bottom: 0;
}

.faq-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  padding: 10rpx 0;
}

.faq-question {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.faq-icon {
  font-size: 28rpx;
  color: #999;
}

.faq-answer {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-top: 12rpx;
  padding: 15rpx;
  background: #f9f9f9;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.guide-item {
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f2f5;
}

.guide-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
  margin-bottom: 0;
}

.guide-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 10rpx;
}

.guide-icon {
  font-size: 32rpx;
}

.guide-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.guide-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-left: 44rpx;
}

.contact-card {
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-icon {
  font-size: 28rpx;
}

.contact-text {
  font-size: 26rpx;
  color: #666;
}

.btn-feedback {
  width: 100%;
  height: 70rpx;
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 15rpx;
}

.version-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 30rpx 15rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}
