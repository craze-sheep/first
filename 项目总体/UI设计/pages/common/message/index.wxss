.message-page {
  background: #f5f7fa;
  min-height: 100vh;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 28rpx;
  font-weight: bold;
}

.header-actions {
  display: flex;
  gap: 12rpx;
}

.btn-mark-read {
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: white;
  border-radius: 6rpx;
  padding: 6rpx 12rpx;
  font-size: 18rpx;
}

.tabs {
  display: flex;
  background: white;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 0 20rpx;
}

.tab {
  flex: 1;
  padding: 12rpx 0;
  text-align: center;
  font-size: 22rpx;
  color: #95a5a6;
  border-bottom: 3rpx solid transparent;
}

.tab.active {
  color: #667eea;
  border-bottom-color: #667eea;
  font-weight: bold;
}

.messages-list {
  padding: 12rpx 20rpx;
}

.message-item {
  background: white;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  display: flex;
  gap: 12rpx;
  align-items: flex-start;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.message-item[data-read="false"] {
  background: #f9fbff;
  border-left: 4rpx solid #667eea;
}

.message-icon {
  font-size: 32rpx;
  min-width: 40rpx;
}

.message-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.message-header {
  display: flex;
  justify-content: space-between;
}

.message-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #2c3e50;
}

.message-time {
  font-size: 18rpx;
  color: #95a5a6;
}

.message-preview {
  display: block;
  font-size: 20rpx;
  color: #666;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.message-badge {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #667eea;
  position: absolute;
  right: 12rpx;
  top: 12rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 20rpx;
  color: #95a5a6;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.3;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 24rpx;
}
