.page {
  padding: 24rpx;
}

.field {
  margin-bottom: 24rpx;
}

.label {
  font-size: 26rpx;
  margin-bottom: 8rpx;
  color: #4b5563;
}

input,
textarea {
  padding: 20rpx;
  background: #f7f8fa;
  border-radius: var(--radius-md);
}

textarea {
  min-height: 160rpx;
}

.picker-value {
  padding: 16rpx 0;
  color: #1f2937;
}

.record {
  margin-bottom: 16rpx;
}

.record:last-child {
  margin-bottom: 0;
}

.record-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.course {
  font-size: 30rpx;
  font-weight: 500;
}

.status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
}

.status.pending {
  background: rgba(251, 191, 36, 0.16);
  color: #b45309;
}

.status.approved {
  background: rgba(34, 197, 94, 0.16);
  color: #15803d;
}

.status.rejected {
  background: rgba(239, 68, 68, 0.16);
  color: #b91c1c;
}

.detail {
  color: #6b7280;
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.empty {
  padding: 40rpx 0;
  text-align: center;
  color: #9ca3af;
}
