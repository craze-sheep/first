.page {
  padding: 24rpx;
}

.profile-name {
  font-size: 34rpx;
  font-weight: 600;
}

.profile-desc {
  color: #6b7280;
  margin-top: 8rpx;
}

.switch-role {
  background: #2c7cf1;
  color: #fff;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.course {
  margin-bottom: 20rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.course-meta {
  color: #6b7280;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.course-footer {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.status {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.status.ongoing {
  background: rgba(44, 124, 241, 0.08);
  color: #2c7cf1;
}

.status.upcoming {
  background: rgba(251, 191, 36, 0.16);
  color: #b45309;
}

.status.completed {
  background: rgba(107, 114, 128, 0.12);
  color: #4b5563;
}

.reminder {
  padding: 20rpx;
  border-radius: var(--radius-md);
  margin-bottom: 16rpx;
  font-size: 24rpx;
}

.reminder.info {
  background: rgba(44, 124, 241, 0.08);
  color: #1d4ed8;
}

.reminder.warning {
  background: rgba(244, 88, 34, 0.08);
  color: #b91c1c;
}

.actions {
  margin-top: 20rpx;
  display: flex;
  gap: 16rpx;
}

.actions button {
  flex: 1;
}
