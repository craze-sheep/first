<view class="page">
  <view class="empty" wx:if="{{loading}}">加载中...</view>
  <view class="empty" wx:elif="{{!records.length}}">暂无签到记录</view>
  <block wx:else>
    <view class="card record" wx:for="{{records}}" wx:key="id">
      <view class="course">{{item.course}}</view>
      <view class="meta">
        <view class="status {{item.status}}">
          {{item.status === 'normal' ? '正常' : item.status === 'late' ? '迟到' : item.status === 'absent' ? '缺勤' : '已补签'}}
        </view>
        <view class="time">{{item.time}}</view>
      </view>
    </view>
  </block>
</view>
