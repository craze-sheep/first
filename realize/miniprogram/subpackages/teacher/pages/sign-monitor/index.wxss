.page {
  padding: 24rpx;
}

.summary .title {
  font-size: 32rpx;
  font-weight: 600;
}

.summary .meta {
  color: #6b7280;
  margin: 6rpx 0 12rpx;
}

.progress {
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
}

.qr {
  margin: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.qr-placeholder {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  border: 1px dashed #d1d5db;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6b7280;
}

.actions button {
  margin-right: 12rpx;
}

.list .row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1px solid #f3f4f6;
}

.list .row:last-child {
  border-bottom: none;
}

.status.normal {
  color: #16a34a;
}

.status.danger {
  color: #f97316;
}

.empty {
  text-align: center;
  color: #9ca3af;
  padding: 20rpx 0;
}
